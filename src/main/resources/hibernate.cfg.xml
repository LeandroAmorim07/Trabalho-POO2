
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL82Dialect</property>
    <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
    <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/HotelLotus</property>
    <property name="hibernate.connection.username">postgres</property>
    <property name="hibernate.connection.password">postgres</property>
    <property name="hibernate.hbm2ddl.auto">update</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    <mapping class="model.Cliente"></mapping>
    <mapping class="model.Item"></mapping>
      <mapping class="model.PedidoSQ"></mapping>
    <mapping class="model.ItemPedido"></mapping>
    <mapping class="model.Estadia"></mapping>
     <mapping class="model.Quarto"></mapping>
   
  </session-factory>
</hibernate-configuration>
